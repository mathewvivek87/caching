

<h1>Listing books</h1>

<table border="1" cellspacing="1" >
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Author</th>
    <th colspan="3">Action</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.name %></td>
    <td><%= book.description if !book.description.blank? %></td>
    <td><%= book.author if !book.author.blank? %></td>
    <td><%= link_to 'Show', book %></td>
    <td><%= link_to 'Edit', edit_book_path(book) %></td>
    <td><%= link_to 'Destroy', book, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

